@{
    Layout = null;
}

<!DOCTYPE html>

<html ng-app="homeCinema">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Cinema</title>
    <link rel="stylesheet" href="~/css/custom.min.css" />
    <script src="~/js/bundles/modernizr.min.js"></script>
</head>
<body ng-controller="rootCtrl">
    <top-bar></top-bar>
    <div class="row-offcanvas row-offcanvas-left">
        <side-bar></side-bar>
        <div id="main">
            <div class="col-md-12">
                <p class="visible-xs">
                    <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas"><i class="glyphicon glyphicon-chevron-left"></i></button>
                </p>
                <div class="page {{ pageClass }}" ng-view></div>
            </div>
        </div>
    </div><!--/row-offcanvas -->

    <script src="~/js/bundles/vendors.min.js"></script>
    @*<script src="~/js/spa/spa.min.js"></script>*@
    <script src="~/js/spa/modules/common.core.js"></script>
    <script src="~/js/spa/modules/common.ui.js"></script>
    <script src="~/js/spa/app.js"></script>
    <script src="~/js/spa/services/apiService.js"></script>
    <script src="~/js/spa/services/fileUploadService.js"></script>
    <script src="~/js/spa/services/membershipService.js"></script>
    <script src="~/js/spa/services/notificationService.js"></script>
    <script src="~/js/spa/layout/sideBar.directive.js"></script>
    <script src="~/js/spa/layout/topBar.directive.js"></script>
    <script src="~/js/spa/directives/availableMovie.directive.js"></script>
    <script src="~/js/spa/directives/rating.directive.js"></script>

    <script src="~/js/spa/home/indexCtrl.js"></script>
    <script src="~/js/spa/home/rootCtrl.js"></script>


</body>
</html>
